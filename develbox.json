{
    "image": {
        "name": "debian:testing",
        "onCreation": ["sudo apt-get install nala"],
        "onFinish": ["npm install"],
        "installer": {
            "add": "nala install $args",
            "del": "nala remove $args"
        }
    },
    "commands": {
        "dev": "npm run dev"
    },
    "podman": {
        "path": "podman",
        "runAs": "nobody",
        "rootless": true
    },
    "packages": [
        "node",
        "npm"
    ]
}