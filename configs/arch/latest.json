{
    "image": {
        "uri": "archlinux:latest",
        "on-creation": [
            "pacman -Syu"
        ],
        "on-finish": [],
        "pkg-manager": {
            "operations": {
                "add": "pacman -S {args}",
                "del": "pacman -R {args}",
                "update": "pacman -Syu {args}",
                "upgrade": "pacman -Syu {args}",
                "search": "pacman -Ss {args}"
            },
            "args-modifier": {}
        }
    },
    "podman": {
        "path": "podman",
        "rootless": true,
        "create-deletion": false,
        "container": {
            "name": "",
            "arguments": [
                "--net=host"
            ],
            "work-dir": "/code",
            "shell": "/usr/bin/fish",
            "root-user": false,
            "privileged": true,
            "binds": {
                "xorg": true,
                "/dev": true
            },
            "ports": [],
            "mounts": []
        }
    },
    "commands": {},
    "packages": [
        "fish"
    ]
}